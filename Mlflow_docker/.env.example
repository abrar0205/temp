# MLflow OIDC Environment Configuration

# PostgreSQL
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow123
POSTGRES_DB=mlflow
POSTGRES_PORT=5432

# Keycloak Database (in PostgreSQL)
KEYCLOAK_DB_NAME=keycloak
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=keycloak123

# Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_PORT=8080

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Redis
REDIS_PORT=6379

# MLflow
MLFLOW_PORT=5000

# AWS/MinIO credentials for MLflow
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
MLFLOW_S3_ENDPOINT_URL=http://minio:9000

# OIDC Configuration
OIDC_CLIENT_ID=mlflow
OIDC_CLIENT_SECRET=REPLACE_WITH_VALUE_FROM_CONFIGURE_KEYCLOAK
OIDC_DISCOVERY_URL=http://keycloak:8080/realms/mlflow/.well-known/openid-configuration
OIDC_REDIRECT_URI=http://localhost:5000/callback
OIDC_SCOPE=openid profile email
OIDC_ADMIN_GROUP_NAME=mlflow-admins
OIDC_GROUP_NAME=mlflow-users

# Session Security (generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_KEY

# Network
NETWORK_NAME=mlflow-network
